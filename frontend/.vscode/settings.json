{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "javascript.updateImportsOnFileMove.enabled": "never",
  "files.associations": {
    ".czrc": "json",
    ".huskyrc": "json",
    ".stylelintrc": "json",
    ".env": "properties",
    ".importsortrc": "json"
  },
  "search.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/coverage": true
  }
}
